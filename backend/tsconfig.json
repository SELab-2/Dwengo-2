{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Otherwise TypeScript can complain with TypeORM
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  }
}
